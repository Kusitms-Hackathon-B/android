                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:textSize="24dp"
                                android:textColor="@color/main_color"
                                android:fontFamily="@font/pretendard_bold"
                                android:text="10g"/>

                        </LinearLayout>

                        <View
